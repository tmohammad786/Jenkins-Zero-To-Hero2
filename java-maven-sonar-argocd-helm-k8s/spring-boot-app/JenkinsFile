pipeline {
  agent {
    docker {
        image 'tajmohd/maven-docker:17'
        args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
    }
}

  environment {
    SONAR_URL = "http://13.233.36.185:9000"
    GIT_USER_NAME = "tmohammad786"
    GIT_USER_EMAIL = "tajuddinmohd52@gmail.com"
    GIT_REPO_NAME = "Jenkins-Zero-To-Hero2"
    APP_PATH = "java-maven-sonar-argocd-helm-k8s/spring-boot-app"
    MANIFEST_PATH = "java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests"
    DOCKER_IMAGE = "tajmohd/ultimate-cicd:${BUILD_NUMBER}"
  }

  stages {

    stage('Checkout Code') {
      steps {
        checkout scm
        sh 'echo ‚úÖ Code checked out successfully'
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          echo "üèóÔ∏è Building Java application..."
          cd ${APP_PATH}
          mvn clean package -DskipTests=true
          echo "‚úÖ Build complete"
        '''
      }
    }

    stage('Static Code Analysis - SonarQube') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            echo "üîç Running SonarQube Analysis..."
            cd ${APP_PATH}
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
            echo "‚úÖ SonarQube analysis complete"
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'docker-cred', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
          sh '''
            echo "üê≥ Building Docker image..."
            cd ${APP_PATH}
            docker build -t ${DOCKER_IMAGE} .

            echo "üîê Logging in to DockerHub..."
            echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin

            echo "üì§ Pushing image to DockerHub..."
            docker push ${DOCKER_IMAGE}

            echo "‚úÖ Docker image pushed successfully: ${DOCKER_IMAGE}"
          '''
        }
      }
    }

    stage('Update Deployment Manifest') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            echo "üìù Updating deployment file with new image tag..."
            cd ${MANIFEST_PATH}
            git checkout main || git checkout -b main
            git config user.email "${GIT_USER_EMAIL}"
            git config user.name "${GIT_USER_NAME}"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" deployment.yml
            git add deployment.yml
            git commit -m "üöÄ Updated deployment image to version ${BUILD_NUMBER}"

            echo "üîê Pushing updated manifest to GitHub..."
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main

            echo "‚úÖ Deployment manifest updated successfully!"
          '''
        }
      }
    }
  }

  post {
    success {
      echo "üéâ Pipeline completed successfully!"
    }
    failure {
      echo "‚ùå Pipeline failed ‚Äî check logs for details."
    }
  }
}
